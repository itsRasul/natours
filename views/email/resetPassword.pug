extends baseTemplate

block content
	p Hi #{firstName}
	p forgot your password? please send a patch request to this URL and reset your password #{url}
	table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
		tbody
			tr
				td(align='left')
					table(role='presentation', border='0', cellpadding='0', cellspacing='0')
						tbody
							tr
								td
									a(href=`${url}`, target='_blank') reset your password
	p if you have not forgot your password please ignore this email!